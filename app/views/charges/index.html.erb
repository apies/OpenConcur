<h1>Listing charges</h1>



<table class="box-table-a">
<thead>
  <tr>
    <th>Cardholder</th>
    <th>Date of charge</th>
    <th>Description</th>
    <th>Amount</th>
    <th>User</th>
    <th>Billable</th>
    <th>Approved</th>
    <th>Business purpose</th>
    <th><label for="filter">Filter</label>  
	<input type="text" name="filter" value="" class="filter" /></th>
  </tr>
</thead>
<tbody >
<% @charges.each do |charge| %>
  <tr>
    <td id ="jtable"><%= charge.cardholder %></td>
    <td id ="jtable"><%= charge.date_of_charge %></td>
    <td class ="editInPlace"><%= charge.description %></td>
    <td><%= charge.amount %></td>
    <td><%= charge.user_id %></td>
    <td><%= charge.billable %></td>
    <td><%= charge.approved %></td>
    <td><%= charge.business_purpose %></td>
    <td><%= link_to 'Details', charge %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Charge', new_charge_path %>
