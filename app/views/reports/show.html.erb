<p id="notice"><%= notice %></p>

<p>
  <b>Total amount:</b>
  <%= @report.total_amount %>
</p>

<p>
  <b>Report date:</b>
  <%= @report.report_date %>
</p>

<p>
  <b>User:</b>
  <%= @report.user_id %>
</p>

<ol>
  <% for charge in @report.charges %>
  <li><%= h charge.cardholder %>    <%= h charge.amount %><%= h charge.description %></li>
  <% end %>
</ol>



<%= link_to 'Edit', edit_report_path(@report) %> |
<%= link_to 'Back', reports_path %>
